{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    // see: https://github.com/vuejs/test-utils/issues/1538
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["webpack-env", "vite/client"]
  },
  "include": ["jest.setup.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  // @todo-migration restore type checking on test/mock dirs
  "exclude": ["node_modules"]
  // "exclude": ["node_modules", "__tests__", "**/__mock__", "**/__tests__"]
}
